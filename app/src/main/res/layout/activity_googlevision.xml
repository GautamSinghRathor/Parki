<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Googlevision">

    <ImageView
        android:id="@+id/img_source"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/numberplate" />

    <TextView
        android:id="@+id/tv_image_source"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginTop="64dp"
        android:text="Vehicle Number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/img_source"
        app:layout_constraintStart_toStartOf="@+id/img_source"
        app:layout_constraintTop_toBottomOf="@+id/img_source" />

    <Button
        android:id="@+id/btn_get_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/background_drop_btn"
        android:text="getText"
        app:layout_constraintEnd_toEndOf="@+id/tv_image_source"
        app:layout_constraintStart_toStartOf="@+id/tv_image_source"
        app:layout_constraintTop_toBottomOf="@+id/tv_image_source" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/background_btn"
        android:text="send to next"
        app:layout_constraintEnd_toEndOf="@+id/btn_get_text"
        app:layout_constraintStart_toStartOf="@+id/btn_get_text"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_text" />

</androidx.constraintlayout.widget.ConstraintLayout>